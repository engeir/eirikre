*{
    margin: 0;
    padding: 0;
    font-family: sans-serif;
}

html{
    font-size: 100%;
    box-sizing: border-box;
}

body{
    margin: 0px;
    padding: 0px;
    min-height: 100vh;
    background-color: #1b1b1b;
}

*, *::before, *::after {
    box-sizing: inherit;
}

/* Banner */
.banner{
    width: 100%;
    height: 100vh;
    background-image: linear-gradient(rgba(0,0,0,.75),rgba(0,0,0,.75)),url(https://source.unsplash.com/random/800x600);
    background-size: cover;
    background-position: center;
}

/* Navbar */
nav {
    padding: 10px;

    @media (min-width: 600px){
        padding: 20px;
    }
}
